doctype html 
html(lang="en")
  head
    title="Pay Lite"
    
    link(rel="stylesheet" href="/static/normalize.css")
    link(rel="stylesheet" href="/static/skeleton.css")
    link(rel="stylesheet" href="/static/pay-lite.css")
  body
    div.nav 
      // div.nav-item
        h5 Pay Lite
      div.nav-item
        a(href="/transactions") Transactions
      div.nav-item.active
        a(href="/payouts") Payouts
    div.list
      each payout in payouts
        div.list-item
          h5(style="margin-bottom: 5px")= payout.title
          code= payout.id
          table
            thead
              tr
                th(colspan="2") Costs
            tbody
              tr
                td Total from payments
                td.right= payout.charges
              tr
                td Total taken for fees
                td.right (#{payout.fees})
              tr
                td Total taken for refunds
                td.right (#{payout.refunds})
              tr
                th Total paid out
                th.right= payout.net

          span 
            a(href=`/transactions?payout=${payout.id}`) Click here to view transactions
          p Processed #{payout.date}
